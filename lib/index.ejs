<% include header.ejs %>
<div class="row">
    <%if(!session.userId){%>
    <div class="col-md-6">
        <div id="div-form-login">
            <form action="" method="">
                <font color="blue" size="6">Login 2</font>
                &nbsp;&nbsp;&nbsp;&nbsp;<div id="err-register-" style="color: red; font-style: italic"></div>
                <div class="form-group">
                    <label for="txtEmail-login">Email</label>
                    <input type="text" id="txtEmail-login" placeholder="someone@gmail.com" class="form-control"
                            required="required" pattern="[0-9]{4}">
                    <div id="err-email-login" style="color: red; font-style: italic"></div>
                </div>
                <div class="form-group">
                    <label for="txtPassword-login">Password</label>
                    <input type="password" id="txtPassword-login" class="form-control" required="required">
                    <div id="err-password-login" style="color: red; font-style: italic"></div>
                </div>
                <!--<button id="" type="submit" class="btn btn-warning">Login</button>-->
                <button id="btnLogin" type="button" class="btn btn-warning">Login</button>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <img src="./images/2ik.png" width="600" height="500">

    </div>
    <%}
    else
    {%>
        <% include chat.ejs%>
    <%}%>
</div>
<% include footer.ejs %>